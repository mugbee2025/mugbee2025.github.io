{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "jsx": "preserve",
    "types": ["astro/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "*.config.ts",
    ".astro/types.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
