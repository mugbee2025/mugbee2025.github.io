---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogs = await getCollection('blogs');
  return blogs.map((blog) => ({
    params: { slug: blog.data.slug },
    props: { blog },
  }));
}

const { blog } = Astro.props;
---

<BaseLayout title={blog.data.title} description={blog.data.description}>
  <main>
    <h1 class="title">{blog.data.title}</h1>
    <p class="publishedAt">公開日時：{blog.data.publishedAt}</p>
    <article><div set:html={blog.data.content} /></article>
  </main>
</BaseLayout>
